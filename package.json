{
  "name": "crema-react-boilerplate",
  "version": "1.0.0",
  "description": "The starting point for our web-based React projects",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel server:dev test:watch lint:watch",
    "server:dev": "babel-node tools/server.dev.js",
    "lint": "esw src/**/*",
    "lint:watch": "npm run lint -- --watch",
    "test": "NODE_PATH=./src ava",
    "test:watch": "NODE_PATH=./src ava --watch",
    "build": "webpack -p --config webpack.config.prod.js",
    "build:prod": "NODE_ENV=production npm run build",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cremalab/crema-react-boilerplate.git"
  },
  "keywords": [
    "react",
    "boilerplate"
  ],
  "author": "Crema",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cremalab/crema-react-boilerplate/issues"
  },
  "homepage": "https://github.com/cremalab/crema-react-boilerplate#readme",
  "dependencies": {
    "clear": "0.0.1",
    "compression": "1.6.2",
    "express": "4.13.4",
    "react": "15.0.2",
    "react-dom": "15.0.2",
    "react-redux": "4.4.5",
    "react-router": "2.4.0",
    "redux": "3.5.2",
    "webpack-dev-server": "1.14.1"
  },
  "devDependencies": {
    "ava": "0.15.1",
    "babel-cli": "6.8.0",
    "babel-core": "6.8.0",
    "babel-eslint": "6.0.4",
    "babel-loader": "6.2.4",
    "babel-plugin-react-display-name": "2.0.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-1": "6.5.0",
    "babel-register": "6.8.0",
    "chai": "3.5.0",
    "coveralls": "2.11.9",
    "css-loader": "0.23.1",
    "enzyme": "2.2.0",
    "eslint": "2.9.0",
    "eslint-config-airbnb": "8.0.0",
    "eslint-plugin-babel": "3.2.0",
    "eslint-plugin-import": "1.6.1",
    "eslint-plugin-jsx-a11y": "1.0.4",
    "eslint-plugin-react": "5.0.1",
    "eslint-watch": "2.1.11",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "html-webpack-plugin": "2.17.0",
    "isparta": "4.0.0",
    "mocha": "2.4.5",
    "npm-run-all": "2.1.1",
    "react-addons-test-utils": "15.0.2",
    "react-hot-loader": "1.3.0",
    "style-loader": "0.13.1",
    "webpack": "1.13.0",
    "webpack-dev-middleware": "1.6.1",
    "webpack-hot-middleware": "2.10.0"
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
